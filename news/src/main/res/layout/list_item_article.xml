<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/control_space"
    android:layout_marginStart="@dimen/control_space"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArticleThumbnail"
            android:layout_width="@dimen/hw_iv_thumbnail_article_item"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/control_space_double"
            tools:src="@drawable/ic_favorite_white_24dp"
            tools:tint="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/control_space_double"
            android:layout_marginTop="@dimen/control_space_double"
            android:layout_marginEnd="@dimen/control_space_mini"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvArticleHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="This is a dummy headline"/>

            <TextView
                android:id="@+id/tvArticleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/gray"
                android:textSize="16sp"
                tools:text="23/11/1933"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>